<UserControl x:Class="BattlegroundsMatchData.BgMatchOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattlegroundsMatchData"
             mc:Ignorable="d" Width="170" Height="60" Background="#FF343434" BorderThickness="2" BorderBrush="Black" >
    <StackPanel x:Name="panel" HorizontalAlignment="Left" Width="196" >
        <Label x:Name="TurnLabel" Content="Turn ##" HorizontalAlignment="Left" Margin="0,0,0,-22" VerticalAlignment="Top" FontSize="20" FontFamily="Source Sans Pro Black" Foreground="White" />
        <Label x:Name="StatsLabel" Content="Avg Stats: 0.0 / 0.0" VerticalAlignment="Top" FontSize="18" FontFamily="Source Sans Pro" Foreground="White" HorizontalAlignment="Right" Width="196" Margin="0,10,0,0" />
    </StackPanel>
</UserControl>
